Baza danych znajduje sie na serverze db4free, port 3306. 
Strona internetowa: http://www.db4free.net/
Do edycji danych u≈ºywany jest phpMyAdmin

CREATE TABLE uzytkownik (
         id_uzytkownik INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
         nick VARCHAR(20),
         haslo VARCHAR(20),
         email VARCHAR(30)
);


CREATE TABLE przepis (
         id_przepis INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
         nazwa VARCHAR(20),
         tresc VARCHAR(200),
         zdjecie VARCHAR(50),
         sredniaocena DOUBLE
);


CREATE TABLE skladnik (
         id_skladnik INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
         przepis_id INT NOT NULL,
         nazwa VARCHAR(20),
          FOREIGN KEY fk_przepis1_id(przepis_id)
    	 REFERENCES przepis(id_przepis)
    	 ON DELETE CASCADE
);

CREATE TABLE ocena (
         id_ocena INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    	 przepis_id INT NOT NULL,
    	 uzytkownik_id INT,
          ocena INT,
         komentarz VARCHAR(100)
         FOREIGN KEY fk_przepis_id(przepis_id)
    	 REFERENCES przepis(id_przepis) 
    	 ON DELETE CASCADE,
         FOREIGN KEY fk_uzytkownik_id(uzytkownik_id)
    	 REFERENCES uzytkownik(id_uzytkownik)
    	 ON DELETE SET NULL
           
);
           

